{% extends 'base.html.twig' %}

{% block title %}Atención de ticket{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header alert-primary">
            <h1 class="text-center">Atención al cliente</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4" >
                    Ticket #: {{ ticket.id }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4" >
                    Nombre del cliente: {{ ticket.nombre }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
