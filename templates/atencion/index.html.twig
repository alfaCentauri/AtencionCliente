{% extends 'base.html.twig' %}

{% block title %}Atención de ticket{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header alert-primary">
            <h1 class="text-center">Atención al cliente</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4" >
                    Cola #: {{ informacion.numeroCola}}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4" >
                    Id: {{ informacion.id }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4" >
                    Ticket #: {{ informacion.idTicket }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 offset-md-4 col-md-4" >
                    Nombre del cliente: {{ informacion.nombre }}
                </div>
            </div>
        </div>
        <div class="card-footer alert-info">
            <div class="row">
                <div class="col-sm-6 offset-md-6 col-md-3 offset-lg-8 col-lg-2" >
                    <a href="{{ path('ticket_index') }}" id="botonRegresar" class="btn btn-secondary btn-lg">Regresar</a>
                </div>
                <div class="col-sm-6 col-md-3 col-lg-2" >
                    <a href="{{ path('ticket_delete', { 'id': informacion.id }) }}" id="botonProcesar"
                       class="btn btn-success btn-lg">Procesar</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
